// 2 С++.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Варіант 23
//Дано три точки на площині.Визначити, яка з них ближче до початку координат.

#include <iostream>
#include <iomanip>
#define _USE_MATH_DEFINES
#include <cmath>
using namespace std;


int main()
{
	setlocale(LC_ALL, "Russian");
	float x1, x2, x3, y1, y2, y3;
	float min;
	//Вводим значення координат точок.
	cout << "Введіть x1:"; cin >> x1; 
	cout << "Введіть x2:"; cin >> x2;
	cout << "Введіть x3:"; cin >> x3;
	cout << "Введіть y1:"; cin >> y1;
	cout << "Введіть y2:"; cin >> y2;
	cout << "Введіть y3:"; cin >> y3;

	//Знаходим довжину від кожної точки до початку координат.
	float OA= sqrt(x1 * x1 + y1 * y1); 
	float OB= sqrt(x2 * x2 + y2 * y2);
    float OC= sqrt(x3 * x3 + y3 * y3);

	if (OA < OB and OA < OC) {
		min = OA;
		cout << "1 Точка,яка задана координатами х1,y1 , знаходиться найближче до початку координат.";
	}
	else {
		if (OB < OC) {
			min = OB;
			cout << "2 Точка,яка задана координатами х2,y2 , знаходиться найближче до початку координат.";
		}
		else {
			min = OC; 
			cout << "3 Точка,яка задана координатами х3,y3 , знаходиться найближче до початку координат.";
		}
	 }
	//Знаходим мінімальну довжину від точок до початку координат.
	cin.get();
		
}
